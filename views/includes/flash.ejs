<% if(success && success.length){ %>
  <div class="alert alert-success alert-dismissible fade show col-12 col-md-6 offset-md-3" role="alert">
  <%= success %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if(error && error.length){ %>
  <div class="alert alert-danger alert-dismissible fade show col-12 col-md-6 offset-md-3" role="alert">
  <%= error %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<style>
  .alert {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-radius: 0.5rem;
  }

  @media (max-width: 768px) {
    .alert {
      padding: 1rem;
    }

    .alert-success, .alert-danger {
      font-size: 0.9rem;
    }
  }
</style>

