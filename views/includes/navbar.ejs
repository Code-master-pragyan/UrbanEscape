    <div class="collapse navbar-collapse blur-bg p-2" id="navbarNav">
      <div class="navbar-nav ms-auto d-flex flex-row gap-3">
        <a class="nav-link" href="/listings">Explore</a>
        <a class="nav-link" href="/listings/new">Add new Listing</a>

        <% if (!currUser) { %>
          <a class="nav-link" href="/signup">Sign Up</a>
          <a class="nav-link" href="/login">Log in</a>
          <% } else { %>
            <a class="nav-link logout" href="/logout">Log out</a>
            <% } %>
      </div>
    </div>
  </div>

  </div>
</nav>
