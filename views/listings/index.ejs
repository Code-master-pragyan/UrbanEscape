<% layout("/layouts/boilerplate") %>

    <style>
        #filters {
            display: flex;
            flex-wrap: nowrap;
            align-items: center;
            padding: 1rem 0;
            gap: 0.5rem;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .filter-scroll-container {
            display: flex;
        }

        .filter {
            display: flex;
            align-items: center;
            flex-direction: column;
            opacity: 0.6;
            min-width: 5rem;
            gap: 0.3rem;
            flex-shrink: 0;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter a div i {
            font-size: 1.2rem;
        }

        .filter p {
            font-size: 0.75rem;
            text-align: center;
        }

        .tax-toggle {
            border: 1px solid black;
            border-radius: 10px;
            height: 3rem;
            display: flex;
            align-items: center;
            padding: 0 1rem;
            margin-left: auto;
            flex-shrink: 0;
        }

        .tax-info {
            display: none;
        }

        .card-text {
            position: relative;
        }

        .card-img-wrapper {
            position: relative;
            flex-shrink: 0;
        }

        .card-img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 0.5rem;
        }

        .card-img-wrapper .fa-heart {
            position: absolute;
            top: 0.3rem;
            right: 0.3rem;
            font-size: 1rem;
            color: #ff4d4d;
            background: white;
            border-radius: 50%;
            padding: 0.2rem;
            box-shadow: 0 0 3px rgba(0, 0, 0, 0.2);
        }

        /* Responsive design for smaller screens */

        /* for the card layout*/
        @media (max-width: 768px) {
            .row-cols-sm-1>.col {
                flex: 0 0 100%;
                max-width: 100%;
            }

            @media (max-width: 576px) {
                #filters {
                    flex-wrap: nowrap;
                    overflow-x: auto;
                    gap: 0.5rem;
                    padding: 0.8rem 0.5rem;
                    scroll-snap-type: x mandatory;
                    display: flex;
                    position: relative;
                }

                .filter-scroll-container {
                    display: flex;
                    gap: 0.6rem;
                    scroll-snap-align: start;
                }

                .filter {
                    scroll-snap-align: start;
                    min-width: 4rem;
                    opacity: 0.7;
                    text-align: center;
                }

                .clear-filter {
                    margin-top: 1rem !important;
                    padding: 0.5rem 1rem !important;
                }

                .filter a div i {
                    font-size: 1.1rem;
                }

                .filter p {
                    font-size: 0.65rem;
                }

                .filter a.btn {
                    font-size: 0.7rem;
                    padding-top: 0.2rem !important;
                    width: 5.5rem;
                    height: 2.2rem;
                    text-align: center;
                    white-space: nowrap;
                }

                .tax-toggle {
                    height: 2.2rem;
                    padding: 0 0.8rem !important;
                    border-radius: 6px;
                    align-items: center !important;
                    margin-left: 0;
                    font-size: 0.6rem;
                    flex-shrink: 0;
                    /* padding-right: 15px !important; */
                }

                .tax-toggle label {
                    font-size: 0.9rem;
                    /* padding-left: 0.2rem !important; */
                }

                .tax-toggle input[type="checkbox"] {
                    transform: scale(0.8);
                    margin-left: 0.2rem;
                    font-size: 0.9rem !important;
                }
            }

            .card {
                display: flex;
                flex-direction: column;
                align-items: left;
                padding: 0.5rem;
                gap: 0.8rem;
                height: auto;
                border: 1px solid #e0e0e0;
                box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);
            }

            .card-img-top {
                width: 100px;
                height: 14rem !important;
                object-fit: cover;
                border-radius: 0.5rem;
                flex-shrink: 0;
            }

            .card-body.index-card-body {
                padding: 0;
                flex: 1;
            }

            .card-text {
                font-size: 0.75rem;
                line-height: 1.1;
            }

            .card-text b {
                font-size: 0.9rem;
                display: block;
            }

            .card-img-wrapper {
                position: relative;
                flex-shrink: 0;
            }

            .card-img-wrapper img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 0.5rem;
            }

            .card-img-wrapper .fa-heart {
                position: absolute;
                top: 0.3rem;
                right: 0.3rem;
                font-size: 1rem;
                color: #ff4d4d;
                background: white;
                border-radius: 50%;
                padding: 0.2rem;
                box-shadow: 0 0 3px rgba(0, 0, 0, 0.2);
            }

            .card-text span {
                display: block;
                margin-top: 0.2rem;
                font-size: 0.8rem !important;
            }

            .card-text span:last-child {
                font-size: 0.5 !important;
                margin-top: 1.5rem !important;
            }
        }
    </style>



    <div id="filters">
        <div class="filter-scroll-container">
            <div class="filter">
                <a href="/listings?category=Trending" class="filter text-dark text-decoration-none">
                    <div><i class="fa-solid fa-fire"></i></div>
                    <p>Trending</p>
                </a>
            </div>
            <div class="filter">
                <a href="/listings?category=Rooms" class="filter text-dark text-decoration-none">
                    <div><i class="fa-solid fa-bed"></i></div>
                    <p>Rooms</p>
                </a>
            </div>
            <div class="filter">
                <a href="/listings?category=Iconic cities" class="filter text-dark text-decoration-none">
                    <div><i class="fa-solid fa-city"></i></div>
                    <p>Iconic cities</p>
                </a>
            </div>
            <div class="filter">
                <a href="/listings?category=Mountains" class="filter text-dark text-decoration-none">
                    <div><i class="fa-solid fa-mountain-sun"></i></div>
                    <p>Mountains</p>
                </a>
            </div>
            <div class="filter">
                <a href="/listings?category=Castles" class="filter text-dark text-decoration-none">
                    <div><i class="fa-solid fa-chess-rook"></i></div>
                    <p>Castles</p>
                </a>

            </div>
            <div class="filter">
                <a href="/listings?category=Amaizing Pools" class="filter text-dark text-decoration-none">
                    <div><i class="fa-solid fa-water-ladder"></i></div>
                    <p>Amaizing Pools</p>
                </a>

            </div>
            <div class="filter">
                <a href="/listings?category=Camping" class="filter text-dark text-decoration-none">
                    <div><i class="fa-solid fa-campground"></i></div>
                    <p>Camping</p>
                </a>

            </div>
            <div class="filter">
                <a href="/listings?category=Farms" class="filter text-dark text-decoration-none">
                    <div><i class="fa-solid fa-tractor"></i></div>
                    <p>Farms</p>
                </a>
            </div>
            <div class="filter">
                <a href="/listings?category=Hotels" class="filter text-dark text-decoration-none">
                    <div><i class="fa-solid fa-hotel"></i></div>
                    <p>Hotels</p>
                </a>
            </div>
            <div class="filter">
                <a href="/listings?category=Arctic" class="filter text-dark text-decoration-none">
                    <div><i class="fa-regular fa-snowflake"></i></div>
                    <p>Arctic</p>
                </a>
            </div>
        </div>
    </div>

    <div class="d-flex flex-wrap justify-content-between align-items-center mt-2 mb-3">
        <div class="clear-filter">
            <a href="/listings" class="btn btn-sm btn-outline-secondary mb-3">
                Clear Filter
            </a>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input type="checkbox" class="form-check-input" role="switch" id="flexSwitchCheckDefault">
                <label for="flexSwitchCheckDefault" class="form-check-label">Display Taxes</label>
            </div>
        </div>
    </div>


    <div class="row" id="listings-container">
        <% listings.forEach(listing=> { %>
            <div class="col-md-4 mb-4">
                <div class="card listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= listing.title %>
                        </h5>
                        <span>Price: &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
                                    /night</span><i class="tax-info">&nbsp;+18% GST</i><br>
                        <p class="card-text"><strong>Location:</strong>
                            <%= listing.location %>, <%= listing.country %>
                        </p>
                        <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>

    <div id="ai-chatbox" style="display: none;">
        <div class="chat-container">
            <div class="chat-header">
                <div class="ai-avatar">🤖</div>
                <h3>Travel Assistant</h3>
                <button class="close-btn" id="close-chatbox">×</button>
            </div>

            <div class="quick-actions">
                <button class="quick-btn">Top Destinations</button>
                <button class="quick-btn">Cultural Tips</button>
            </div>

            <div class="chat-messages" id="chat-messages">
                <div class="message ai-message">
                    <p>Hello! How can I assist you with your travel plans today? 🌍</p>
                </div>
            </div>

            <div class="input-area">
                
                <input placeholder="Ask me about India..." type="text" id="chat-input" />
                <button class="send-btn" id="send-message">Send</button>
            </div>
        </div>
    </div>


    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");

        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (info of taxInfo) {
                info.style.display = taxSwitch.checked ? "inline" : "none";
            }
        })
    </script>