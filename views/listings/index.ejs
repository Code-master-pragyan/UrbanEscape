<% layout("/layouts/boilerplate") %>

<body>
    <h3 style="margin: 3rem 0 3rem 0; color: #fe424d;">All Listings</h3>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>
            <div class="col">
                <a href="/listings/<%=listing._id%>" class="listing-link text-decoration-none">
                    <div class="card">
                        <img src="<%=listing.image.url%>" class="card-img-top" alt="Listing Image" style="height: 18rem">
                        <div class="card-img-overlay"></div>
                        <div class="card-body index-card-body">
                            <p class="card-text">
                                <b><%= listing.title %></b> <br>
                                <span>Price: &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night</span> <br>
                                <span> Country: <%= listing.country %></span> 
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</body>
