<% layout("/layouts/boilerplate") %>


    <div class="row">
        
        <div class="col-8 offset-2">
            <h3 style="margin: 3rem 0; color: #fe424d;">Create a new Listing</h3>
            <form method="POST" action="/listings" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input name="title" placeholder="Add a catchy Title" type="text" class="form-control" required autofocus>
                    <div class="valid-feedback">
                        Title looks good!
                    </div>
                    <div class="invalid-feedback">
                        you should enter a title
                      </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea name="description" placeholder="Enter description" class="form-control" required></textarea>
                    <div class="valid-feedback">
                        valid
                    </div>
                    <div class="invalid-feedback">
                       Give a short description
                      </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lable">Image Link</label>
                    <input name="image.url" placeholder="Enter image URL" type="text" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input name="price" placeholder="1200" type="text" class="form-control" required>
                        <div class="valid-feedback">
                            valid
                        </div>
                        <div class="invalid-feedback">
                            you should enter the price
                          </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-lable">Location</label>
                        <input name="location" placeholder="Mumbai" type="text" class="form-control" required>
                        <div class="valid-feedback">
                            valid
                        </div>
                        <div class="invalid-feedback">
                            you should enter the location
                          </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-lable">Country</label>
                    <input name="country" placeholder="India" type="text" class="form-control" required>
                    <div class="valid-feedback">
                        valid
                    </div>
                    <div class="invalid-feedback">
                        you should enter the country
                      </div>
                </div>
                <br>
                <button class="btn btn-dark add-btn" style="margin-bottom: 3rem;">Create</button>
            </form>
        </div>
    </div>