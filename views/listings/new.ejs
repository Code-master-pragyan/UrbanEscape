<% layout("/layouts/boilerplate") %>

<style>
  .listing-wrapper {
    min-height: 100vh;
    padding: 2rem 1rem;
    display: flex;
    align-items: flex-start;
    justify-content: center;
  }

  .listing-form {
    width: 100%;
    max-width: 700px;
    background: #fff;
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
  }

  .listing-form h3 {
    color: #fe424d;
    border-left: 5px solid #fe424d;
    padding-left: 10px;
    margin-bottom: 1.5rem;
  }

  .form-label {
    font-weight: 500;
  }

  .add-btn {
    width: 100%;
    padding: 0.6rem;
    background-color: #fe424d;
    border: none;
    color: white;
    font-weight: 500;
    transition: 0.3s;
  }

  .add-btn:hover {
    background-color: #ff2a35;
  }

  @media (max-width: 768px) {
    .listing-form {
      padding: 1.5rem 1rem;
    }

    .add-btn {
      font-size: 1rem;
    }

    .form-label {
        font-size: 0.9rem !important;
    }

    .form-control {
        font-size: 0.9rem !important;
    }
  }
</style>

<div class="listing-wrapper">
  <div class="listing-form">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" class="needs-validation" enctype="multipart/form-data" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" type="text" class="form-control" placeholder="Add a catchy title" required autofocus>
        <div class="invalid-feedback">You should enter a title.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" placeholder="Enter description" required></textarea>
        <div class="invalid-feedback">Give a short description.</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input name="listing[image]" type="file" class="form-control" required>
        <div class="invalid-feedback">Upload a listing image.</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4 col-12">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" type="text" class="form-control" placeholder="1200" required>
          <div class="invalid-feedback">Enter the price.</div>
        </div>
        <div class="mb-3 col-md-8 col-12">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" type="text" class="form-control" placeholder="Mumbai" required>
          <div class="invalid-feedback">Enter the location.</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" type="text" class="form-control" placeholder="India" required>
        <div class="invalid-feedback">Enter the country.</div>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="listing[category]" class="form-control" required>
          <option value="">-- Select a Category --</option>
          <option value="Trending">Trending</option>
          <option value="Rooms">Rooms</option>
          <option value="Iconic cities">Iconic cities</option>
          <option value="Mountains">Mountains</option>
          <option value="Castles">Castles</option>
          <option value="Amaizing Pools">Amazing Pools</option>
          <option value="Camping">Camping</option>
          <option value="Farms">Farms</option>
          <option value="Hotels">Hotels</option>
          <option value="Arctic">Arctic</option>
        </select>
        <div class="invalid-feedback">Please select a category.</div>
      </div>

      <button class="btn add-btn mt-3" type="submit">Create</button>
    </form>
  </div>
</div>
