<% layout("/layouts/boilerplate") %>

<style>
  body {
    background-color: #f8f9fa;
  }

  .signup-wrapper {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
  }

  .signup-form {
    width: 100%;
    max-width: 400px;
    background: #fff;
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .signup-form h3 {
    border-left: 5px solid #fe424d;
    padding-left: 10px;
    margin-bottom: 1.5rem;
  }

  .signup-btn {
    background: transparent;
    border: 1px solid #fe424d;
    width: 100%;
    padding: 0.5rem 1rem;
    transition: all 0.3s ease;
  }

  .signup-btn:hover {
    background: #fe424d;
    color: #fff;
    border-color: #fe424d;
  }

  .form-label {
    font-weight: 500;
  }

  .login-link {
    margin-top: 1rem;
    font-size: 0.85rem;
    color: rgba(110, 110, 110, 0.63);
  }
</style>

<div class="signup-wrapper">
  <div class="signup-form">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <h3>Sign Up on UrbanEscape</h3>

      <div class="mb-3 mt-4">
        <label for="username" class="form-label">Username</label>
        <input id="username" type="text" name="username" class="form-control" required autofocus>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">You should enter a username.</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">You should enter a valid email.</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">You should enter a password.</div>
      </div>

      <button type="submit" class="btn signup-btn mt-3">Sign Up</button>
    </form>

    <div class="text-center login-link">
      <p>Already have an account? <a href="/login">Log in here</a></p>
    </div>
  </div>
</div>
